{
  "name": "simpleclick/google-play-billing",
  "description": "Google Play Billing",
  "authors": [
    {
      "name": "simpleclick",
      "email": "webmaster@simpleclick.com.au"
    }
  ],
  "require": {
    "php": ">=7.1",
    "ext-json": "*",
    "nesbot/carbon": "^2.41",
    "guzzlehttp/guzzle": "^6.0|^7.0",
    "google/auth": "^1.15"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.5",
    "symfony/var-dumper": "^5.1",
    "vimeo/psalm": "^3.17",
    "friendsofphp/php-cs-fixer": "^2.16",
    "fzaninotto/faker": "^1.9"
  },
  "autoload": {
    "psr-4": {
      "Simpleclick\\GooglePlay\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Simpleclick\\GooglePlay\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "psalm": "vendor/bin/psalm",
    "psalm-info": "vendor/bin/psalm --show-info=true",
    "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
  }
}
